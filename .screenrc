startup_message off
vbell off

# Mac OS X is, as usual, incredibly stupid.
# Ah well.
shell -${SHELL}

# Proudly stolen from the Gentoo wiki
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

altscreen on
term screen-256color
defutf8 on

# Banish screen 0
bind c screen 1
bind 0 select 10
screen 1
select 1

